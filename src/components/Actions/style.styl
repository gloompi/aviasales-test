@import '../../assets/styles/main'

.actions__list
  display flex
  flex-direction column
  width 100%

.actions__item
  position relative
  display flex
  align-items: flex-start
  justify-content space-between
  padding-bottom 25px
  padding-top 25px
  &:first-child
    padding-top 0
  &:last-child
    padding-bottom 0
    &:after
      display none
  &:after
    content: ''
    position absolute
    width 541px
    height 1px
    left 50%
    bottom 0
    background-color #EFF1F4
    transform translateX(-50%)

.action__view
  display flex
  align-items: flex-start
  justify-content flex-start
  width 45%
  &.red
    .action__icon
      &:after
        background-color $red
    .action__title
      color $red
      span 
        background-color $red

.action__icon
  position relative
  display flex
  align-items: center
  justify-content center
  width 48px
  height 48px
  border-radius 50%
  background-color $blue
  margin-right 20px
  img
    width 16px
  &:after
    content: ''
    position absolute
    width 10px
    height 10px
    right 0
    top 0
    background-color $green
    border 2.5px solid $white
    border-radius 50%

.action__text_wrapper
  display flex
  flex-direction column
  min-width 200px

.action__title
  display flex
  align-items center
  font-size 16px
  color $primary-txt
  margin-bottom 5.6px
  span 
    display flex
    align-items center
    justify-content center
    font-size 12px
    min-width 41px
    height 18px
    color $white
    background-color $green
    border-radius 15px
    margin-left 13px
    padding 0 3px

.action__current_value
  display flex
  align-items center
  line-height 28px
  font-size 20px
  color $primary-txt
  margin-bottom 5px
  small 
    font-size 12px
    margin-left 10px

.action__previous_value
  display flex
  align-items center
  line-height 28px
  font-size 20px
  color $secondary-txt
  small 
    font-size 12px
    margin-left 10px

.addition__info
  display flex
  flex-direction: column
  align-items flex-start
  width 55%
  h2
    font-weight 600
    line-height 28px
    font-size 16px
    color $primary-txt
    margin-bottom 5.6px
    &.red
      color $red
  .addition__little_txt
    font-size 12px
    color $secondary-txt
    margin-bottom 6.3px
  .addition__help
    font-size 12px
    line-height 17px
    color $primary-txt
    a
      color $blue